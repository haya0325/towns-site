<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :nickname, value: "ユーザー名" %><br />
    <%= f.text_field :nickname, class: "form-control", placeholder: "ユーザー名" %>
  </div>

  <div class="form-group">
    <%= f.label :email, value: "メールアドレス" %><br />
    <%= f.email_field :email, class: "form-control", id: "exampleInputEmail1", placeholder: "メールアドレス" %>
  </div>

  <div class="form-group">
    <%= f.label :password, value: "パスワード" %>
    <% if @minimum_password_length %>
    <em>※<%= @minimum_password_length %> 文字以上入力してください</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, value: "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認用）", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
